{
  "name": "ekklisia-worker",
  "description": "Database Migrator & Background Task Services",
  "version": "0.1.0",
  "main": "index.js",
  "author": "Nam Pham <nampdn@protonmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "run-s docker:build docker:run",
    "dev:docker": "run-p watch:tsc watch:server smee",
    "server": "yarn compile && node build/server.js",
    "server:prod": "export GITHUB_APP_PRIVATE_KEY=`cat /repos/key.pem` && node build/server.js",
    "compile": "run-s compile:tsc compile:webpack",
    "compile:tsc": "tsc -b",
    "compile:webpack": "webpack --mode=production",
    "watch:webpack": "webpack -w",
    "watch:tsc": "tsc -b -w",
    "watch:server": "nodemon --watch build build/server.js",
    "smee": "smee -p 7070 -u https://smee.io/FJks3SYD0E49itZO",
    "docker:build": "docker-compose build",
    "docker:run": "docker-compose up",
    "postinstall": "patch-package",
    "lint": "tslint -p ."
  },
  "dependencies": {
    "@barajs/core": "3.0.0-alpha.427",
    "@barajs/express": "1.4.0",
    "@barajs/formula": "^3.0.0-alpha.470",
