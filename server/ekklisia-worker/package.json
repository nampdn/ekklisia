    "@barajs/github": "1.1.2",
    "@barajs/loader": "^1.0.0",
    "@barajs/pouchdb": "^1.3.2",
    "@octokit/app": "3.0.2",
    "@octokit/rest": "16.28.3",
    "@octokit/webhooks": "6.2.2",
    "@vgm/nodeasync": "1.3.0",
    "@vietbible/model": "1.7.1",
    "bufferutil": "4.0.1",
    "consola": "2.9.0",
    "encoding": "0.1.12",
    "lru-cache": "5.1.1",
    "p-all": "2.1.0",
    "pouchdb": "7.1.1",
    "rxdb": "8.7.3",
    "simple-git": "1.119.0",
    "utf-8-validate": "5.0.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-typescript": "7.6.3",
    "@types/graphql": "14.5.0",
    "@types/jest": "24.0.15",
    "@types/js-yaml": "3.12.1",
    "@types/lru-cache": "5.1.0",
    "@types/node": "12.6.2",
    "@types/p-all": "2.0.0",
    "@types/pouchdb": "6.4.0",
    "@types/remarkable": "1.7.4",
    "concurrently": "4.1.1",
    "forever": "1.0.0",
    "nodemon": "1.19.1",
    "npm-run-all": "4.1.5",
    "patch-package": "6.2.0",
    "prettier": "1.18.2",
    "simple-git-types": "1.53.10",
    "smee-client": "1.1.0",
    "ts-jest": "24.0.2",
    "ts-loader": "6.2.1",
    "ts-node": "8.4.1",
    "tslint": "5.18.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.6.4",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.9"
  },
  "quokka": {
    "babel": {
      "ts": true,
      "plugins": [
        "@babel/plugin-transform-typescript"
