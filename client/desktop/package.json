{
  "name": "vietbible",
  "version": "4.0.0-alpha.0",
  "description": "VietBible is the Bible Study Software for Vietnamese",
  "main": "./build/main.bundle.js",
  "license": "MIT",
  "author": {
    "email": "dev@vgm.me",
    "name": "VGM Dev Team",
    "url": "https://github.com/vgmtv"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:vgmtv/vietbible-release.git"
  },
  "scripts": {
    "dev": "run-p compile:dev electron:start",
    "electron:start": "wait-on http://localhost:19006 && nodemon --watch build --exec \"electron ./build/main.bundle.js\"",
    "postinstall": "electron-builder install-app-deps",
    "compile": "run-s compile:prod dist",
    "compile:ci": "run-s compile:prod dist:ci",
    "compile:dev": "NODE_ENV=development webpack --watch --progress --colors",
    "compile:prod": "NODE_ENV=production webpack --progress --colors",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:ci": "electron-builder"
  },
  "dependencies": {
    "@barajs/core": "3.0.0-alpha.429",
    "@barajs/electron": "1.0.1"
  },
  "devDependencies": {
    "@types/electron": "1.6.10",
    "@types/electron-devtools-installer": "2.2.0",
    "@types/electron-store": "3.2.0",
    "@types/node": "12.11.6",
    "copy-pkg-json-webpack-plugin": "0.0.38",
    "electron": "7.1.2",
    "electron-builder": "21.2.0",
    "electron-devtools-installer": "2.2.4",
    "electron-notarize": "0.1.1",
    "html-webpack-plugin": "3.2.0",
    "lodash": "4.17.15",
    "nodemon": "1.19.4",
    "npm-run-all": "4.1.5",
    "wait-on": "3.3.0",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.9"
  },
  "build": {
    "productName": "VietBible",
    "appId": "com.mdds.mac.VietBible",
    "mac": {
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.education",
      "target": [
        "mas",
        "dmg"
      ],
      "type": "distribution"
    },
    "mas": {
      "entitlements": "assets/entitlements.mas.plist",
      "entitlementsInherit": "assets/entitlements.mas.inherit.plist",
      "provisioningProfile": "assets/VietBible_Cloud_Distribution.provisionprofile",
      "type": "distribution",
      "category": "public.app-category.education"
    },
    "files": [
      "build/",
      "package.json"
    ]
  }
}
