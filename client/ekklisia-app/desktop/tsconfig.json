{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["esnext", "dom", "dom.iterable"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": false,
    "isolatedModules": true,
    "module": "commonjs",
    "noEmit": false,
    "outDir": "./build",
    "rootDir": "./src",
    "target": "es2015",
    "typeRoots": ["../@types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"]
}
